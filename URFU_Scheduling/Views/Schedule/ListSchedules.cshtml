@using URFU_Scheduling.Models.ViewModels
@{
    ViewBag.Title = "My Schedules";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@model ListSchedulesViewModel


<div class="container mt-4">
    <h2>@ViewBag.Title</h2>

    @if (Model.Schedules.Any())
    {
        <div class="row">
            @foreach (var schedule in Model.Schedules)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header bg-dark text-white">
                            <h5 class="card-title">@schedule.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Schedule description.</p>
                            <a href="@Url.Action("ScheduleGetById", "Schedule", new { scheduleId = schedule.Id, startDate=DateTime.Now, period = "week" })" class="btn btn-outline-dark">Open</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">У вас нет расписаний.</p>
    }
</div>