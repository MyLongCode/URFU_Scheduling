@using URFU_Scheduling.Models.ViewModels
@model CreateTagViewModel

@{
    ViewBag.Title = "Создать тег";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Создать тег</h2>
    <form asp-action="TagCreate" asp-controller="Tag" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="Name" class="form-label">Название тега</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Введите название тега" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="Color" class="form-label">Цвет тега</label>
            <input id="Color" name="Color" type="color" class="form-control form-control-color"
                   value="#000000" title="Выберите цвет">
            @Html.ValidationMessageFor(m => m.Color, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Создать тег</button>
    </form>
</div>